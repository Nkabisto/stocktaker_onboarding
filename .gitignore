# Append to existing .gitignore
cat >> .gitignore << 'EOF'

# ===== MONOREPO ADDITIONS =====

# node modules
node_modules/

# Server
server/node_modules
server/.env
server/logs
server/*.log

# Client
client/node_modules
client/.env.local
client/dist
client/.env

# Database
database/dump/
*.db
*.sqlite

# Environment files
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# IDE
.vscode/
.idea/
*.swp
*.swo
*~

# OS
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
[Tt]humbs.db

# Temporary files
tmp/
temp/
EOF
