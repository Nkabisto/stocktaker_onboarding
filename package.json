{
  "name": "stocktaker_onboarding_app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "dev": "npm run start",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "postinstall": "cd client && npm install --ignore-scripts && cd ../server && npm install --ignore-scripts"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "concurrently": "^8.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.37.3",
    "axios": "^1.13.5"
  }
}
